<h1>Create Movie</h1>
<%= form_for Movie.new do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
   <p>
    <%= f.label :description %><br />
    <%= f.text_field :description, cols: 40, row: 7 %>
  </p>
   <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating, size: 4 %>
  </p>
    <p>
    <%= f.label :released_on %><br />
    <%= f.date_field :released_on %>
  </p> 

    <p>
    <%= f.label :totall_gross %><br />
    <%= f.text_field :totall_gross %>
  </p> 

  <p>
  	<%= f.submit %>
  </p>
<% end %>
