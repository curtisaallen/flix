<h1>Editing Movie: <%= @movie.title %></h1>
<%= form_for(@movie) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
   <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
   <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
    <p>
    <%= f.label :released_on %><br />
    <%= f.date_field :released_on %>
  </p> 

    <p>
    <%= f.label :totall_gross %><br />
    <%= f.text_field :totall_gross %>
  </p> 

  <p>
  	<%= f.submit %>
  </p>
<% end %>